<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHotel.SobrePage">

    <!-- Fundo com cores gradientes -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="#000000" Offset="0.0" />
            <GradientStop Color="#4B0082" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="30" Spacing="20"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">

        <Label Text="Sobre o Aplicativo"
               FontSize="28"
               TextColor="White"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Label Text="Desenvolvedor: Seu Nome"
               FontSize="20"
               TextColor="White"
               HorizontalOptions="Center" />

        <Label Text="Ano de Desenvolvimento: 2024"
               FontSize="20"
               TextColor="White"
               HorizontalOptions="Center" />

        <Button Text="Voltar"
                BackgroundColor="DarkOrange"
                TextColor="White"
                Clicked="OnVoltarButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
